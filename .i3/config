set $mod Mod5

font xft:Inconsolata 8 

new_window pixel 2
focus_follows_mouse no

#don't move to neighbouring screen with hjkl
force_focus_wrapping yes

set $blue #005588
set $gray1 #484848
set $gray2 #333333

client.focused            $blue    $gray1   #FF0000   #333333
client.focused_inactive   $gray2   $gray2   #FFFFFF   #000000
client.unfocused          $gray2   $gray2   #FFFFFF   #000000

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec urxvtc

# kill focused window
bindsym $mod+c kill

# start dmenu (a program launcher)
bindsym $mod+r exec "dmenu_run -nf '#888888' -nb '#222222' -sf '#ffffff' -sb '#285577'"

# screen lock
bindsym Control+$mod+l exec slimlock

# change focus
# bindsym $mod+h focus left
# bindsym $mod+j focus down
# bindsym $mod+k focus up
# bindsym $mod+l focus right

# move focused window
# bindsym $mod+Shift+h move left
# bindsym $mod+Shift+j move down
# bindsym $mod+Shift+k move up
# bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+v split h

# split in vertical orientation
bindsym $mod+g split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (tabbed, toggle split)
# bindsym $mod+n layout tabbed
bindsym $mod+m layout toggle split

# container navigation
bindsym $mod+d focus parent
bindsym $mod+b focus child

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# switch to last workspace
bindsym $mod+l workspace back_and_forth

# switch to workspace
bindsym $mod+a workspace 1: a
bindsym $mod+o workspace 2: b
bindsym $mod+e workspace 3: fa
bindsym $mod+u workspace 4: fb
bindsym $mod+h workspace 5: fc
bindsym $mod+t workspace 6: fd
bindsym $mod+n workspace 7: fe
bindsym $mod+s workspace 8: ff

# move focused container to workspace
bindsym $mod+Shift+a move container to workspace 1: a
bindsym $mod+Shift+o move container to workspace 2: b
bindsym $mod+Shift+e move container to workspace 3: fa
bindsym $mod+Shift+u move container to workspace 4: fb
bindsym $mod+Shift+h move container to workspace 5: fc
bindsym $mod+Shift+t move container to workspace 6: fd
bindsym $mod+Shift+n move container to workspace 7: fe
bindsym $mod+Shift+s move container to workspace 8: ff

bindsym $mod+z reload
bindsym $mod+i exec "xcalib -invert -alter"
bindsym $mod+Shift+x restart
bindsym $mod+Shift+z exit

mode "resize" {
        bindsym h   resize shrink width 10 px or 10 ppt
        bindsym j   resize grow height 10 px or 10 ppt
        bindsym k   resize shrink height 10 px or 10 ppt
        bindsym l   resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or q or ^[
        bindsym Return mode "default"
        bindsym q mode "default"
        bindsym Escape mode "default"
        bindcode Control+34 mode "default"
}

bindsym $mod+x mode "resize"

# multimedia keys
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master '3%+'"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master '1%-'"
bindsym XF86AudioMute exec "amixer -D pulse set Master toggle"
bindsym XF86AudioMicMute exec "amixer -D pulse sset Capture toggle"

bindsym XF86KbdBrightnessDown exec "sudo /opt/kbdlight/bin/kbdlight -"
bindsym XF86KbdBrightnessUp exec "sudo /opt/kbdlight/bin/kbdlight +"
bindsym XF86TouchpadToggle exec "synclient TouchpadOff=$(synclient | awk '/TouchpadOff/ {print ($3+1)%2}')"

bindsym XF86Display exec "arandr"

bindsym $mod+w exec "urxvtc -e alsamixer"
bindsym $mod+Shift+w exec "pavucontrol"

bar {
        position top
        status_command ~/.i3/conky
        colors { 
                statusline #AAAAAA
                background #333333
                focused_workspace $gray2 $gray2 #FFFFFF
                inactive_workspace $gray1 $gray1 #AAAAAA
        }
}

